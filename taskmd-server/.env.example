# TaskMD Server Configuration

# Server
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
SHUTDOWN_TIMEOUT=10s
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=taskmd
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Authentication
AUTH_MODE=password  # "password" or "oidc"
JWT_SECRET=change-me-in-production-to-a-long-random-string
JWT_EXPIRES_IN=24h

# OIDC (only needed if AUTH_MODE=oidc)
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=

# Logging
LOG_LEVEL=info      # debug, info, warn, error
LOG_FORMAT=json     # json or text
DEBUG=false         # Enable detailed debug logging (true/false)
